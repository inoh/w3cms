<%= content_for :title do @content.title end %>
<%= content_for :stylesheets do %>
  <link href="/stylesheets/jquery-ui-1.7.3.custom.css" media="screen" rel="stylesheet" type="text/css" />
  <link href="/stylesheets/manager.css" media="screen" rel="stylesheet" type="text/css" />
<% end %>
<%= content_for :javascript do %>
  <script src="/javascripts/contents.js" type="text/javascript"></script>
  <script src="/javascripts/jquery.contextmenu.r2.packed.js" type="text/javascript"></script>
  <script src="/javascripts/jquery-ui-1.7.3.custom.min.js" type="text/javascript"></script>
<% end %>

<div style="position: absolute;top: 0;left: 0;">
  <%= link_to 'Back', contents_path %>
  <%= form_for(@content) do |f| %>
    <div class="field">
      <%= f.hidden_field :note %>
    </div>
    <div class="actions">
      <%= f.submit '更新', :onclick => '$("#content_note").val($("#contents_area").html())' %>
    </div>
  <% end %>
</div>

<!-- CMS用 -->
<div id="-manager-area">
  <div id="-manager-context-menu" class="contextMenu">
     <ul>
        <li id="-manager-add_node">Add</li>
        <li id="-manager-delete_node">Delete</li>
        <li id="-manager-change_p">Change P</li>
        <li id="-manager-change_h1">Change H1</li>
        <li id="-manager-change_h2">Change H2</li>
        <li id="-manager-change_h3">Change H3</li>
        <li id="-manager-change_h4">Change H4</li>
        <li id="-manager-change_h5">Change H5</li>
        <li id="-manager-change_h6">Change H6</li>
     </ul>
  </div>
  <div id="-manager-input-h1-div" title="入力エリア">
    <textarea id="-manager-input-h1-area"></textarea>
  </div>
</div>
<!-- CMS用 END -->

<div id="contents_area">
  <%= raw @content.note %>
</div>
